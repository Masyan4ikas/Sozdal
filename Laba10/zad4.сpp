#include <iostream>
using namespace std;
int main ()
{
    setlocale(LC_ALL, "Rus");
    int a, n1, n2, n3;
    cout<<"Введите числo A ";
    cin>>a;
    n1=a%10;
    n2=a/10%10;
    n3=a/100;
    if ((n1>n2 && n2>n3) || (n1<n2 && n2<n3))
        cout<<"Истина";
    else cout<<"Ложь";
    return 0;
}
