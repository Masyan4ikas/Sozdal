// Дано трехзначное число. В нем зачеркнули первую слева цифру и приписали ее справа. Вывести полученное число.

#include <iostream>
using namespace std;

int main() {
    setlocale(0,"rus");
    int a=0,b=0;
    cout << "Введите трехзначное число: ";
    cin >> a;
    b = a%100;
    a = a/100;
    cout << "Изменненое трехзначное число: " << b <<a;
}
