/*Дан диаметр окружности d. Найти ее длину L = π·d.В качестве значения π использовать 3.14.*/

#include <iostream>
using namespace std;

int main()
{
    setlocale(0, "rus");
    float d = 0, l = 0, pi = 3.14;
    cout << "Введите диаметр окружности:\n";
    cout << " d = \t";
    cin >> d;
    l = d*pi;
    cout << "Длина окружности: L = π * d = 3,14 * " << d << "=" << l;
}
