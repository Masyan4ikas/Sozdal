// Даны три точки A, B, C на числовой оси. Найти длины отрезков AC и BC и их сумму.

------------------------------------------------------------------------
#include <math.h>                                                      -
#include <iostream>                                                    -
using namespace std;                                                   -
                                                                       -
int main()                                                             -
{                                                                      -
    double a = 0, b = 0, c = 0;                                        -
                                                                       -  
    cout << "Введите значение точек A, B, C через пробел:\n";          -
    cout << "A, B, C = \t";                                            -
                                                                       -
    cin >>a>>b>>c;                                                     -
                                                                       -
    cout << "Длина отрезка AC = " << abs(a-c) << "\n";                 -
    cout << "Длина отрезка BC = " << abs(b-c) << "\n";                 -
    cout << "Суммва длин AC, BC = " << abs(a-c) + abs(b-c);            -
    cout << " ";                                                       -
                                                                       -
    return 0;                                                          -
}                                                                      -
------------------------------------------------------------------------
